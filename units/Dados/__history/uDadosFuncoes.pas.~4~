unit uDadosFuncoes;

interface

uses
  System.SysUtils, System.Classes, ZAbstractConnection, ZConnection, ZDataset;

  procedure InsereDados(pTabela,pCampos,pValores:String);

implementation

uses
  uDados;

procedure InsereDados(pTabela,pCampos,pValores:String);
var
  zqInsere:TZQuery;
begin
  try
    with zqInsere do
    begin
      Connection  :=  DM.conDados;
      if Active then
        Close;
      SQL.Clear;
      SQL.Add('INSERT INTO ');
      SQL.Add(pTabela);
      SQL.Add('(');
      SQL.Add(pCampos);
      SQL.Add(') VALUES (');
      SQL.Add(pValores);
      SQL.Add(')');
      ExecSQL;
    end;
  except
    FreeAndNil(zqInsere);
  end;
  FreeAndNil(zqInsere);
end;

end.
